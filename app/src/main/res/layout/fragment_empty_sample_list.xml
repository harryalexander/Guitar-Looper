<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/create_sample_button_content_description"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EmptySampleListFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/no_samples_message"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/record_sample_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#333399"
        android:text="@string/record_sample_button_text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>